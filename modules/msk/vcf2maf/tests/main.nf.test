nextflow_process {

    name "Test Process VCF2MAF"
    script "../main.nf"
    process "VCF2MAF"

    tag "modules"
    tag "modules_nfcore"
    tag "vcf2maf"


    test("normal_tumor_sample1 - stub") {

        options "-stub"

        when {
            process {
                """
                
                input[0] = [
                    [ id:'tumor.normal', case_id:'tumor', control_id:'normal' ], // meta map
                    file("stub_vcf_file"),
                    file("stub_fasta_file")
                    ]
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }

    }

}
