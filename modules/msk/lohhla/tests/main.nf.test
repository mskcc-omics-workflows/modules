nextflow_process {

    name "Test Process LOHHLA"
    script "../main.nf"
    process "LOHHLA"

    tag "modules"
    tag "modules_nfcore"
    tag "lohhla"

    // TODO nf-core: Change the test name preferably indicating the test-data and file-format used

    // TODO nf-core: If you are created a test for a chained module
    // (the module requires running more than one process to generate the required output)
    // add the 'setup' method here.
    // You can find more information about how to use a 'setup' method in the docs (https://nf-co.re/docs/contributing/modules#steps-for-creating-nf-test-for-chained-modules).
    setup {
 
            run("POLYSOLVER") {
                script "../../polysolver/main.nf"
                process {
                    """
                    input[0] = [[ id:'testNormal', single_end:false ], file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true)]
                    input[1] = []
                    input[2] = []
                    input[3] = []
                    input[4] = []
                    
                    """
                }
            }
        }


    test("homo_sapiens - bam") {
        
        when {
            process {
                """
                input[0] = [ id:'testNormal', single_end:false ], // meta map
                        file(params.test_data['homo_sapiens']['illumina']['test_paired_end_sorted_bam'], checkIfExists: true)]
                input[1] = [
                    [ id:'testTumor', single_end:false ], // meta map
                    file(params.test_data['homo_sapiens']['illumina']['test2_paired_end_sorted_bam'], checkIfExists: true)
                ]
                input[2] = POLYSOLVER.out.tsv
                input[3] = []
                input[4] = []
                """

                then {
                    assertAll(
                        { assert process.success },
                        { assert snapshot(process.out).match() }
                        //TODO nf-core: Add all required assertions to verify the test output.
                    )
                }
            }
        }
    }

}

